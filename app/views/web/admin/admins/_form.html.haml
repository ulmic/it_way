.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @admin_form
.row
  .col-lg-12
    = simple_form_for [:admin, @admin_form], input_html: { class: 'form-horizontal' } do |f|
      = f.input :last_name, as: :string
      = f.input :first_name, as: :string
      = f.input :email, as: :string, required: true
      = f.input :password, as: :string
      = f.input :role
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_admins_path, class: 'btn btn-default'
